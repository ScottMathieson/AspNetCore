    <ProjectReference Include="..\ViewCompilationApps\ApplicationWithCustomInputFiles\ApplicationWithCustomInputFiles.csproj" />
    <ProjectReference Include="..\ViewCompilationApps\ApplicationWithParseErrors\ApplicationWithParseErrors.csproj" />
    <ProjectReference Include="..\ViewCompilationApps\ApplicationWithTagHelpers\ApplicationWithTagHelpers.csproj" />
    <ProjectReference Include="..\ViewCompilationApps\ApplicationWithRazorSdkNeitherUsed\ApplicationWithRazorSdkNeitherUsed.csproj" />
