    <ProjectReference Include="..\ViewCompilationApps\ApplicationWithRazorSdkUsed\ApplicationWithRazorSdkUsed.csproj" />
    <ProjectReference Include="..\ViewCompilationApps\PublishWithEmbedViewSources\PublishWithEmbedViewSources.csproj" />
    <ProjectReference Include="..\ViewCompilationApps\RazorPagesApp\RazorPagesApp.csproj" />
    <ProjectReference Include="..\ViewCompilationApps\SimpleAppWithAssemblyRename\SimpleAppWithAssemblyRename.csproj" />
    <ProjectReference Include="..\ViewCompilationApps\SimpleApp\SimpleApp.csproj" />
