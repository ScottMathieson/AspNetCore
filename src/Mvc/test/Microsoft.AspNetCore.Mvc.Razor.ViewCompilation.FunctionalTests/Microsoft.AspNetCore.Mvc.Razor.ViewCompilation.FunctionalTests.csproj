    <Compile Include="CoreCLRTests\*.cs" Condition="'$(TargetFramework)'=='netcoreapp2.0' OR '$(TargetFramework)'=='netcoreapp2.1'" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="CoreCLRTests\RazorSdkNeitherUsedTest_CoreCLR.cs" />
